<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_categories_row"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/marker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_categories_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo"
                android:textSize="20sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/description_categories_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="descripcion"
                android:textSize="13sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/category_categories_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="categoria"
                android:textSize="13sp"
                android:typeface="normal" />

            <TextView
                android:id="@+id/rating_categories_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="Rating "
                android:textSize="15sp"
                android:typeface="normal" />

        </LinearLayout>

    </LinearLayout>
    
</RelativeLayout>